{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "rootfolders": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/folder"
      }
    },
    "projectFolders": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/folder"
      }
    }
  },
  "definitions": {
    "folder": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "priority": {
          "type": "string"
        },
        "subfolders": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/folder"
          }
        }
      },
      "required": [ "name", "priority" ]
    }
  },
  "required": [ "rootfolders", "projectFolders" ]
}